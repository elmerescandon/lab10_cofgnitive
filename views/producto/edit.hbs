<div class="container">
    <h3><a href="/productos">Lista de Productos</a></h3>
    <h1>Editar Productos</h1>
    <form action="/productos/update/{{ producto._id }}" method="post">
        <div class="form-group">
          <label for="nombreInput">Nombre</label>
          <input type="text" class="form-control" id="nombre" value="{{ producto.nombre }}" name="nombre">
        </div>

        <div class="form-group">
          <label for="nombreInput">Nombre</label>
          <input type="text" class="form-control" id="precio" value="{{ producto.precio }}" name="precio">
        </div>
        <div class="form-group">
          <label for="nombreInput">Nombre</label>
          <input type="text" class="form-control" id="stock" value="{{ producto.stock }}" name="stock">
        </div>

        <button class="btn btn-primary" type="submit">Button</button>
    </form>
</div>
